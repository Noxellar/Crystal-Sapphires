// Dark Crystal Sapphire
/*
	* All syntax colours are the hexes of one of the special 140 HTML colours which have names
	* They can be found at https://www.w3schools.com/colors/colors_names.asp
	* Meanwhile, the workspace colours are shades of Cornflower Blue (one of the special names colours)
	* I used https://www.hexcolortool.com/ to create the shades of cornflower blue
	* (and maybe the shades of the shades)
*/
{
	"name": "Dark Crystal Sapphire",
	"type": "dark",
	"colors": {
		"editor.background": "#000021",
		"editor.foreground": "#eeffff",
		"editor.selectionHighlightBackground": "#00ced144",
		"editor.findMatchHighlightBackground": "#00ced144",
		"editor.hoverHighlightBackground": "#00ced144",
		"editorGroupHeader.tabsBackground": "#31228841",
		"tab.activeBackground": "#3122884d",
		"tab.inactiveBackground": "#31228811",
		"sideBar.foreground": "#318CE7",
		"sideBar.background": "#00002E",
		"list.activeSelectionForeground": "#FFFFFF",
		"list.activeSelectionBackground": "#1A1A48",
		"list.inactiveSelectionBackground": "#1A1A48",
		"list.hoverForeground": "#FFFFFF",
		"list.hoverBackground": "#1A1A48",
		"activityBar.background": "#00004A",
		"activityBarBadge.background": "#007acc",
		"sideBarSectionHeader.foreground": "#FFFFFF",
		"sideBarTitle.foreground": "#bbbbbb",
		"input.background": "#00004A",
	},
	"tokenColors": [
		{
			"name": "Keywords",
			"scope": [
				"keyword.control",
			],
			"settings": {
				"foreground": "#1E90FF",
			}
		},
		{
			"name": "Variables",
			"scope": [
				"variable",
				"storage",
			],
			"settings": {
				"foreground": "#6495ED",
			}
		},
		{
			"name": "Function Brackets",
			"scope": [
				"meta.function.expression",
			],
			"settings": {
				"foreground": "#FFFFFF",
			}
		},
		{
			"name": "Classes & Functions",
			"scope": [
				"meta.function",
				"meta.class",
			],
			"settings": {
				"foreground": "#FFE4B5",
			}
		},
		{
			"name": "Function Call",
			"scope": [
				"meta.function-call",
			],
			"settings": {
				"foreground": "#6495ED",
			}
		},
		{
			"name": "Strings",
			"scope": [
				"string",
				"punctuation.definition.string.begin",
				"punctuation.definition.string.end",
			],
			"settings": {
				"foreground": "#32CD32",
			}
		},
		{
			"name": "Numbers",
			"scope": [
				"constant.numeric"
			],
			"settings": {
				"foreground": "#00EEFF",
			}
		},
		{
			"name": "Comments",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"foreground": "#80808093",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Codetags",
			"scope": [
				"keyword.codetag.notation"
			],
			"settings": {
				"foreground": "#6495ED",
			}
		},
		{
			"name": "Markup",
			"scope": [
				"markup"
			],
			"settings": {
				"foreground": "#FFFFFF",
			}
		},
		{
			"name": "HTML Tags",
			"scope": [
				"meta.tag",
			],
			"settings": {
				"foreground": "#6495ED",
			}
		},
		{
			"name": "HTML Attribute",
			"scope": [
				"entity.other.attribute-name.html",
			],
			"settings": {
				"foreground": "#F28500",
			}
		},
		{
			"name": "CSS Selector",
			"scope": [
				"meta.selector"
			],
			"settings": {
				"foreground": "#1E90FF",
			}
		},
		{
			"name": "CSS Attribute",
			"scope": [
				"meta.property-name"
			],
			"settings": {
				"foreground": "#00CED1",
			}
		},
		{
			"name": "CSS Attribute Value",
			"scope": [
				"meta.property-value"
			],
			"settings": {
				"foreground": "#FFE4B5",
			}
		},
		{
			"name": "Links",
			"scope": [
				"markup.underline.link",
			],
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"name": "Punctuation",
			"scope": [
				"keyword.operator",
				"meta.braces",
				"meta.block",
				"meta.parens",
				"meta.group",
				"meta.brackets",
			],
			"settings": {
				"foreground": "#FFFFFF",
			}
		},
	]
}